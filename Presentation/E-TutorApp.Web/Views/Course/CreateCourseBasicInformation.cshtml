@model CourseBasicInfoViewModel

@{
    Layout = "~/Views/Shared/_CourseCreationLayout.cshtml";
    ViewBag.Title = "Basic Information";
}

<h2>Basic Information</h2>

<form asp-action="SaveBasicInformation" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Subtitle" class="control-label"></label>
        <input asp-for="Subtitle" class="form-control" />
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseCategory" class="control-label"></label>
        <select asp-for="CourseCategory" class="form-control" asp-items="@(new SelectList(Model.Categories))">
            <option value="">Select a Category</option>
        </select>
        <span asp-validation-for="CourseCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseSubCategory" class="control-label"></label>
        <select asp-for="CourseSubCategory" class="form-control" asp-items="@(new SelectList(Model.SubCategories))">
            <option value="">Select a Sub-category</option>
        </select>
        <span asp-validation-for="CourseSubCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseTopic" class="control-label"></label>
        <input asp-for="CourseTopic" class="form-control" />
        <span asp-validation-for="CourseTopic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseLanguage" class="control-label"></label>
        <select asp-for="CourseLanguage" class="form-control" asp-items="@(new SelectList(Model.Languages))">
            <option value="">Select a Language</option>
        </select>
        <span asp-validation-for="CourseLanguage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubtitleLanguage" class="control-label"></label>
        <select asp-for="SubtitleLanguage" class="form-control" asp-items="@(new SelectList(Model.SubtitleLanguages))">
            <option value="">Select a Subtitle Language</option>
        </select>
        <span asp-validation-for="SubtitleLanguage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseLevel" class="control-label"></label>
        <select asp-for="CourseLevel" class="form-control" asp-items="@(new SelectList(Model.Levels))">
            <option value="">Select a Level</option>
        </select>
        <span asp-validation-for="CourseLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" />
        <select asp-for="DurationUnit" class="form-control mt-2" asp-items="@(new SelectList(Model.DurationUnits))">
            <option value="minutes">Minutes</option>
            <option value="hours">Hours</option>
            <option value="days">Days</option>
        </select>
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="button" class="btn btn-secondary">Cancel</button>
        <button type="submit" class="btn btn-primary">Save & Next</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
